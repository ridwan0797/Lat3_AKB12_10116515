<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="597dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/op2" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="82dp"
            android:layout_height="73dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher_foregrounds"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="436dp"
                    android:layout_height="518dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/warnaputih"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="100dp">

                    <!--SEPARATOR-->
                    <View
                        android:layout_width="60dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@color/warnamerah" />
                    <!--END OF SEPARATOR-->

                    <!--IMAGE AND NAME-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingStart="20dp"
                            android:paddingLeft="20dp"
                            android:paddingEnd="0dp"
                            android:paddingRight="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/gotham"
                                android:text="Ridwan Maulana"
                                android:textColor="@android:color/background_dark"
                                android:textSize="30sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:orientation="horizontal">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="70dp"
                                    android:fontFamily="@font/gotham"
                                    android:text="Bandung , Jawa Barat"
                                    android:textColor="@color/warnabias"
                                    android:textSize="18sp"
                                    app:fontFamily="@font/gotham" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <!--END OF IMAGE AND NAME-->

                    <!--ABOUT-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20sp"
                            app:fontFamily="@font/gotham" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="The man who like sport especially basketball and football , Custom Motor Enthusiast , Athlethicman , and i love to hear music everyday "
                            android:textColor="@color/warnahitam"
                            android:textSize="14sp"
                            app:fontFamily="@font/gothamkecil" />

                    </LinearLayout>
                    <!--END OF ABOUT-->


                    <!--AGE -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20sp"
                            app:fontFamily="@font/gotham" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="21"
                            android:textColor="@color/warnahitam"
                            android:textSize="14sp"
                            app:fontFamily="@font/gothamkecil" />

                    </LinearLayout>
                    <!--END OF AGE-->

                    <!--STATUS -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20sp"
                            app:fontFamily="@font/gotham" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="College Student"
                            android:textColor="@color/warnahitam"
                            android:textSize="14sp"
                            app:fontFamily="@font/gothamkecil" />

                    </LinearLayout>
                    <!--STATUS-->

                    <!--Contact -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20sp"
                            app:fontFamily="@font/gotham" />

                        <TextView
                            android:id="@+id/no_panggil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:onClick="panggil"
                            android:text="+6287730608060"
                            android:textColor="@color/warnahitam"
                            android:textSize="14sp"
                            app:fontFamily="@font/gothamkecil" />

                    </LinearLayout>
                    <!--Contact-->

                    <!--MAPS-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Find Me"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20sp"
                            app:fontFamily="@font/gotham" />


                        <ImageView
                            android:id="@+id/mapView"
                            android:layout_width="600dp"
                            android:layout_height="256dp"
                            android:layout_gravity="left"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="15dp"
                            android:paddingRight="180dp"
                            android:src="@drawable/map" />

                    </LinearLayout>
                    <!--END OF MAPS-->




                    <!--SOCMED-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Social Media"
                            android:textColor="@android:color/background_dark"
                            android:textSize="20sp"
                            app:fontFamily="@font/gotham" />

                        <!--SOCMED_ROW_1-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!--FB-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="20dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="20dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/facebook"
                                    android:src="@drawable/fb" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="facebook"
                                    android:textAlignment="center"
                                    android:textColor="@color/warnahitam"
                                    app:fontFamily="@font/gotham" />

                            </LinearLayout>
                            <!--END OF FB-->

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <!--TW-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="20dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="20dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="0dp"
                                    android:id="@+id/twitter"
                                    android:src="@drawable/tw" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="twitter"
                                    android:textAlignment="center"
                                    android:textColor="@color/warnahitam"
                                    app:fontFamily="@font/gotham" />

                            </LinearLayout>
                            <!--END OF TW-->

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <!--INTEREST IF-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingStart="20dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="20dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/instagram"
                                    android:src="@drawable/ig" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Instagram"
                                    android:textAlignment="center"
                                    android:textColor="@color/warnahitam"
                                    app:fontFamily="@font/gotham" />

                            </LinearLayout>
                            <!--END OF IG-->

                        </LinearLayout>
                        <!--END OF SOCMED ROW_1-->
                        <!--MAPS-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="55dp"
                                android:layout_height="57dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="20dp"
                                android:text="r."
                                android:textColor="@color/warnabias"
                                android:textSize="50dp"
                                app:fontFamily="@font/len" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text="Version : 1.00.7"
                                android:textColor="@color/warnabias"
                                android:textSize="14sp"
                                app:fontFamily="@font/gotham" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text="© 2019 - VmpreDev."
                                android:textColor="@color/warnabias"
                                android:textSize="14sp"
                                app:fontFamily="@font/gotham" />


                        </LinearLayout>
                        <!--END OF MAPS-->



                        <!--END OF INTEREST-->


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </RelativeLayout>























</FrameLayout>


