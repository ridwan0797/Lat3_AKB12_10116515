<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Fragment.DailyFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="92dp"
        android:layout_height="95dp"
        android:src="@mipmap/ic_launcher_foregrounds" />

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.rdwn.gallery.MainActivity">


        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/image_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="130dp"
            android:background="@color/warnamerah" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerv_view"
            android:layout_width="match_parent"
            android:layout_height="590dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="141dp">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/layout_hor"
            android:layout_width="302dp"
            android:layout_height="107dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="107dp"
            android:layout_marginTop="17dp">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</FrameLayout>